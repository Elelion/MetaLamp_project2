mixin news(props)
	-var props = props || {};
	-var photoPoster = props.photoPoster || 'news';
	-var photoAlt = props.photoAlt || 'best news';
	-var photoTitle = props.photoTitle || 'SEO words';

	-var title = props.title || `It's all going downhill`;
	-var data = props.data || '24 august 2013';

	-
		var description = props.description || `
		Lorem ipsum dolor sit amet,
		consectetus adipiscing elit.
		Sed condimentum aliquet
		venenatis. Etiam a nisi nunc,
		a tincidunt eros.`;

	//- FIXME: check the path, when importing the block to other projects
	// -var path = props.path || 'src/components/news-events/news/images/';
	-var path = props.path || './src/assets/images/';

	//-

	.news
		.news__logo
			img.news__poster(src= path + photoPoster + '.jpg',
				alt= photoAlt,
				title= photoTitle,
				width='258px',
				height='578px')

		.news__content
			.news__title
				p.news__title-font= title
			.news__data
				p.news__data-font= data
			.news__description
				p.news__description-font= description
